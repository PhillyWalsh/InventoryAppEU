<?xml version='1.0' encoding='utf-8'?>
<widget id="com.app.inventory" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>InventoryApp</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="splashscreen" />
    <preference name="Orientation" value="portrait" />
    <preference name="SplashScreenDelay" value="4000" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="platforms/android/res/drawable/splashscreen.png" density="hdpi"/>
        <icon src="platforms/android/res/drawable/launcher_icon.png" density="ldpi" />
        <icon src="platforms/android/res/drawable/launcher_icon.png" density="mdpi" />
        <icon src="platforms/android/res/drawable/launcher_icon.png" density="hdpi" />
        <icon src="platforms/android/res/drawable/launcher_icon.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
